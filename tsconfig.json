{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,

        "noImplicitAny": true,
        "removeComments": true,
        "resolveJsonModule": true,

        "baseUrl": ".",
        "outDir": "./dist",
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}